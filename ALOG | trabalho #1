// Trabalho #1 de ALOG 10/05/2019
// Saque com notas de 20 e 50 reais apenas

#include <stdio.h>

int main()
{
    // declaração de variáveis
    char* txt = "nota(s) de";
    int saque, n20, n50;
    int flag = 1;
    
    
    // inicialização de variáveis
    n20 = n50 = 0;
    
    
    // processamento
    do {
        // entrada
        scanf("%d", &saque);
        
        if (saque > 1000) {
        printf("Valor acima do saque permitido de R$ 1.000,00\n");
        printf("Tente de novo: ");
        }
        
        else if (saque % 20 == 0 || saque % 50 == 0 ) {
            if (saque > 50) {
                n50 = saque / 50;
                saque = saque - (n50 * 50);
            }
            
            if (saque < 50) {
                n20 = saque / 20;
            }
            
            printf("%d %s 50    %d %s 20", n50, txt, n20, txt);
            flag = 0;
        }
        else {
            printf("Valor de saque não permitido para notas de 50 e de 20 reais\n");
            printf("Tente de novo: ");
        }
        
    } while (flag == 1);
    
    return 0;
}
